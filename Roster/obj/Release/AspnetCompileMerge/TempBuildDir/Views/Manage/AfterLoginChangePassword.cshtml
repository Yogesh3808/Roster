
@model Roster.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layoutpage.cshtml";
}

<script src="~/boostrap/js/jquery-3.2.1.min.js"></script>
<script src="~/boostrap/js/popper.min.js"></script>
<script src="~/boostrap/js/bootstrap.min.js"></script>
<script src="~/boostrap/js/main.js"></script>
<script src="~/boostrap/js/plugins/pace.min.js"></script>
<div class="app-content" style="margin-top:70px;">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-edit"></i>Change Password</h1>
        </div>
    </div>
    @using (Html.BeginForm("AfterLoginChangePassword", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @*@Html.ValidationSummary(true)*@
        @Html.AntiForgeryToken()
        @*@Html.HiddenFor(m => m.ID)*@
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <div class="row">
                        <div class="col-lg-4 offset-lg-1">
                            <div class="form-group">
                                <label class="control-label" for="disabledInput">Type Old password</label>
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.OldPassword, "", new { @style = "color:red" })
                                <p style="color:red"> @Html.Raw(TempData["msg"])</p>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="disabledInput">Type new password</label>
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @style = "color:red" })
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="disabledInput">Type Confirm new password</label>
                                @Html.PasswordFor(m => m.NewConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.NewConfirmPassword, "", new { @style = "color:red" })
                            </div>
                            <div class="form-group">
                                @*<label class="control-label" style="color:red">Password must contain: Minimum 8 and Maximum 32 characters atleast 1 UpperCase Alphabet, 1 LowerCase Alphabet, 1 Number and 1 Special Character</label>*@
                                <label class="control-label" style="color:red; margin-bottom: 0rem;">1.Minimum 8 and Maximum 32 characters</label>
                                <label class="control-label" style="color:red; margin-bottom: 0rem;">2.Minimum 1 Number</label>
                                <label class="control-label" style="color:red; margin-bottom: 0rem;">3.Must have Upper and Lower cases Characters</label>
                                <label class="control-label" style="color:red;  margin-bottom: 0rem;">4.Minimum 1 Special Character (Allowed characters list: !@@#$%^&*? )</label>
                            </div>
                            <div>@*@ViewBag.Message*@</div>
                        </div>
                    </div>
                    <div class="tile-footer">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-3">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Save</button>&nbsp;&nbsp;&nbsp;
                                <a class="btn btn-secondary" href="~/Manage/AfterLoginChangePassword"><i class="fa fa-fw fa-lg fa-times-circle"></i>Reset</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

