@model Roster.Models.ForgotPasswordViewModel
@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Main CSS-->
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <!-- Font-icon css-->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Login - Devcool Admin</title>
</head>
<body>
    <section class="material-half-bg">
        <div class="cover"></div>
    </section>
    <section class="login-content" style="background-color:#0912f3;">
        <div class="logo">
            <h1>
                <img width="260" height="50" style="background-color:#0912f3;" src="~/images/devcool-logo-h-white.png" class="custom-logo" alt="DevCool" itemprop="logo" sizes="(max-width: 220px) 100vw, 200px">
            </h1>
        </div>
        <div class="login-box" style="height:500px">
            <div class="login-form">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <h3 class="login-head"><i class="fa fa-lg fa-fw fa-lock" style="color:#0912f3;"></i>Forgot Password ?</h3>
                    <div class="form-group">
                        <label class="control-label">EMAIL</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:red" })
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="disabledInput">Type new password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red" })
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="disabledInput">Type Confirm new password</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @style = "color:red" })
                    </div>
                    <p style="color:red"> @Html.Raw(TempData["msg"])</p>
                    <div class="form-group btn-container">
                        <button class="btn btn-primary btn-block" style="background-color:#0912f3;border-color:#0912f3"><i class="fa fa-sign-in fa-lg fa-fw"></i>Submit</button>
                    </div>
                    <div class="form-group mt-3">
                        <p class="semibold-text mb-0"><a style="color:#0912f3;" href="~/Account/Login" data-toggle="flip"><i class="fa fa-angle-left fa-fw"></i> Back to Login</a></p>
                    </div>
                }
            </div>
        </div>
    </section>
</body>
</html>