@model.Roster.Models.EmployeeViewModel
@{
     Layout = "~/Views/Shared/_Layoutpage.cshtml";
}




<div class="app-content" style="margin-top:70px;">
    <div class="app-title">
        <h1>Employee Details</h1>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                    <form class="form-horizontal">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group row">
                            <label class="control-label col-md-1">First Name<span class="star">*</span></label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name", @onkeypress = "return alphaOnly(event);" })
                                @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:red" })
                            </div>
                            <label class="control-label col-md-1">Last Name<span class="star">*</span></label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name", @onkeypress = "return alphaOnly(event);" })
                                @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:red" })
                            </div>
                            <label class="control-label col-md-1" for="disabledInput">Date Of Birth <span class="star">*</span></label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", @placeholder = "DOB" })
                                @Html.ValidationMessageFor(m => m.DOB, "", new { @style = "color:red" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-1">Email ID<span class="star">*</span></label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email ID" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:red" })
                            </div>
                            <label class="control-label col-md-1">Phone No<span class="star">*</span></label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Phone No" })
                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @style = "color:red" })
                            </div>
                            <label class="control-label col-md-1">Address<span class="star">*</span></label>
                            <div class="col-md-3">
                                @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @placeholder = "Address" })
                                @Html.ValidationMessageFor(m => m.Address, "", new { @style = "color:red" })
                            </div>

                        </div>

                    </form>
                </div>
                <div class="tile-footer">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-3">
                            <a class="btn btn-primary" href="/Account/RegisterUser" style="background-color:#0912f3;"><i class="fa fa-fw fa-lg fa-check-circle"></i>New</a>
                            <button class="btn btn-primary" style="background-color:#0912f3;" type="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Register</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

</div>